<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_widthPercent="90%w"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="3%h"
        android:background="@drawable/textborder"
        android:id="@+id/register_account_area">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/account_icon"
            android:id="@+id/register_account_icon"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:digits="1234567890"
            android:hint="请输入手机号码"
            android:gravity="center"
            android:textColorHint="@color/gray"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/register_account_icon"
            android:layout_marginLeft="15dp"
            android:id="@+id/account_value"/>

    </RelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_widthPercent="90%w"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="3%h"
        android:id="@+id/register_verificode_area"
        android:layout_below="@+id/register_account_area"
        android:layout_marginTop="15dp">

        <EditText
            android:layout_width="0dp"
            app:layout_widthPercent="55%"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/textborder"
            android:digits="1234567890"
            android:gravity="center"
            android:hint="输入验证码"
            android:textColorHint="@color/gray"
            android:textSize="18sp"
            android:id="@+id/verificate_value"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="40%w"
            app:layout_heightPercent="90%h"
            android:background="@color/module_6"
            android:text="获取验证码"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/verificate_value"
            app:layout_marginLeftPercent="5%w"
            android:id="@+id/acquire_verification_button"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_widthPercent="90%w"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="3%h"
        android:background="@drawable/textborder"
        android:id="@+id/register_password_area"
        android:layout_below="@+id/register_verificode_area">

        <EditText
            android:layout_width="0dp"
            app:layout_widthPercent="80%w"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="请输入登录密码"
            android:gravity="center"
            android:inputType="textPassword"
            android:textColorHint="@color/gray"
            android:textSize="18sp"
            app:layout_marginLeftPercent="5%w"
            android:id="@+id/password_value"/>

        <ImageView
            android:id="@+id/register_hidePass_area"
            android:layout_width="0dp"
            app:layout_widthPercent="15%w"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ver_pass"
            android:scaleType="center"
            android:layout_alignParentRight="true" />

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_widthPercent="90%w"
        app:layout_marginTopPercent="5%h"
        android:layout_below="@+id/register_password_area"
        android:background="@color/module_11"
        android:text="注册"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:id="@+id/commit_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/login_tip_area"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textStyle="normal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="已有返钱宝宝账号？去登录"
        android:background="@drawable/red_text_border"
        android:layout_below="@+id/commit_button" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_widthPercent="90%w"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_tip_area"
        android:layout_marginTop="30dp"
        android:textSize="14sp"
        android:textStyle="normal"
        android:text="• 注册或登录即视为同意《返钱宝宝用户使用协议》"
        android:id="@+id/userAgreement_tip" />



</com.zhy.android.percent.support.PercentRelativeLayout>